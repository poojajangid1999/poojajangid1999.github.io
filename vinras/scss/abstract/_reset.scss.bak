// Body
$body-bg   : #ffffff;
$body-color: #555;

// Typography
$barlow:'Barlow', sans-serif;
$font-family-base : 'Roboto', sans-serif;;
$font-family-title : 'jost', sans-serif;
$headings-font-weight   : 800;

// $headings-font-family: $fm;
$font-size-base         : 1rem !default;
$font-weight-base       : 400 !default;

*{
	box-sizing:border-box;
}

//***
ul{
	li{
		list-style: none;
	}
	a{
		text-decoration:none;
	}
}
body{
	font-family: 'Poppins', sans-serif;
	margin:0;
	a{
		text-decoration:none;
	}
}

//font-size
	h1{ 
		font-size: 42px;
	}
	h2{
		font-size: 36px;
	}
	h3{
		font-size: 30px;
	}
	h4{
		font-size: 24px;
	}
	h5{
		font-size: 20px;
	}
	h6{
		font-size: 16px;
	}
	

//container
.container{
	max-width: 1100px;
    margin-left: auto;
    margin-right: auto;
    padding-right: 40px;
    padding-left: 40px;
}
//row scss
.row {
		display: flex;
		flex-wrap: wrap;
		margin-left: -15px;
		margin-right: -15px;
	}
//col scss
.col-6{
		width:50%;
		padding-left: 10px;
		padding-right: 10px;
		margin:0px;
	}
	
.col-2 {
	width: 16.66%;
	padding-right: 10px;
	padding-left: 10px;
}

.col-3 {
	width: 25%;
	padding-left: 10px;
	padding-right: 10px;
}
.col-4 {
	width:33.33%;
	padding-left: 10px;
	padding-right: 10px;
}
@media only screen and (max-width:768px){
.container{
		max-width:736px;
		padding-left:15px;
		padding-right:15px;
	}
	.col-6{
		width:100%;
	}
	.col-3 {
		width: 50%;
	}
	
	.col-2 {
		width: 33.33%;
	
	}
}
@media only screen and (max-width:591px){

.col-6{
		width:100%;
	}
	.col-3 {
		width: 100%;
	}
	
	.col-2 {
		width: 100%;
	
	}
	
}