//button scss
.button{
	display:inline-block;
	background-color: $primary;
	padding: 15px 20px;
	border-radius: 69px;
	.btn{
		text-decoration: none;
		font-size: 13px;
		color: $white;
		font-weight: 600;
	}
	&:hover{
		background-color:#f2623a;
		cursor:pointer;
	}	
} 
@media only screen and (max-width:768px){
	.button{
		padding: 10px 10px;
		border-radius: 80px;
		.btn{
			font-size: 11px;
		}
	}
	
} 	
