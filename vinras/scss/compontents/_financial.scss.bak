//financial-section
.financial{
	.advisors-image{
		.images{
			img{
				width: 100%;
				object-fit: cover;
			}
		}
	}
	.business{
		.business-marketing{
			justify-content: space-evenly;
			display: flex;
			flex-wrap: wrap;
			.about-business{
				box-shadow: 9px 5px 23px 0px #e3e2e2;
				background-color: $white;
				padding: 15px 20px;
				margin-bottom: 15px;
				p{
					margin: 0px;
					font-size: 12px;
					font-weight: 500;
					color: #808080;
					width: 206px;
					text-align: justify;
					line-height: 19px;
				}
				//business information
				.business-info{
					display: flex;
					padding-top: 15px;
					.business-name{
						line-height: 36px;
						margin-right: 11px;
						p{
							font-weight: 600;
							background-color: lightgrey;
							display: inline;
							padding: 4px 8px;
						}
						h5{
							margin:0px;
							font-size: 15px;
						}
					}
					.business-icon{
						background-color: $primary;
						padding: 6px 0px;
						margin: 7px 0;
						border-radius: 8px;
						i{
							font-size: 32px;
							padding: 8px 11px;
							color:$white;
						}
						//hover effect
						&:hover{
							i{
								color:black;
							}
						}
					}
					
				}
			}
			
		}
		//accordion-box
		.accordion-box{
			width: 535px;
			.accordion-item{
				margin-bottom: 10px;
				.accordion{
					position: relative;
					box-shadow: 9px 5px 23px 0px #e3e2e2;
					color: #444;
					background-color:white;
					cursor: pointer;
					padding: 18px 29px;
					width: 95%;
					border: none;
					padding-left: 84px;
					text-align: left;
					outline: none;
					font-size: 15px;
					transition: 0.4s;
					span{
						font-size: 13px;
						font-weight: 600;
					}
					.accordion-arrow{
						height: 52px;
						width: 55px;
						position: absolute;
						left: 0px;
						top: 0;
						i{
							font-size: 16px;
							color: $primary;
							padding: 24px 23px;
						}
					}
				}
				//hover effect
				&:hover{
					.accordion{
						background-color:$primary;
						span{
							color:$white;
						}
						.accordion-arrow{
							i{
								color:$white;
							}
						}
					}
				}
				.panel{
					padding: 5px 26px;
					width: 491px;
					display: none;
					background-color: white;
					overflow: hidden;
					line-height: 22px;
					font-weight: 500;
					border-radius: 0px 0px 5px 5px;
					p{
						font-size: 12px;
						color: grey;
					}
				}
			}
		}
	}
}
