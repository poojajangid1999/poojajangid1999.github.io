			padding: 10px 0;
			.service-heading{
				.f-heading{
					line-height: 21px;
					h5{
						margin: 0;
					}
					h2{
						font-size: 29px;
					}
				}
			}
		}
		.service-column{
			.col-4 {
				width: 100%;
				margin-bottom: 5px;
			}
			.wrape{
				width: 100%;
				margin-top: 15px;
				.service-bx{
					
					.right-arrow{
						right: 23px;
						a{
							font-size: 18px;
							padding: 15px 22px;
						}
					}
				}	
				.s-content{
					.content{
						.ex-div{
							padding: 10px 5px;
								p{
									font-size: 14px;
								}
							}
						.icon{
							.info{
								margin-right: 39px;
								h6{
									font-size: 16px;
								}
							}
						}
					}
				}
			}
			
		}
	}


}