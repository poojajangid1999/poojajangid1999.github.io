
/* define colors */

	$primary-color: #0d264e; 
	$secondary-color: #3562d9;  
	$fontcolor:#ffffff ;		// white color

/*top-bar*/
.top-bar{
	background-color:#102751;	
	padding-bottom: 10px;
	
	/*main header*/
	.main-header{
		display:flex;
		justify-content: space-between;
		padding: 10px 0px;
		
	/*top-bar-left*/
		/*first list*/
		.first-list{
			display:flex;
			margin:auto;
			padding: 2px 0px;
			
			  li a{
				color:$fontcolor;
				padding-right: 6px;
				font-size: 15px;
					
					/*first list icon*/
					li i{
					color:#0997e9;
					font-size: 15px;

						.icon{
				padding-left: 21px;
			}
				}
				
			}
			
			.first-list .info{
				border-right:2px solid white;
				padding-right: 13px;
			}
		}
	}
}
