//projects
.projects{
	background-color: #ebeaeb;
    height: 390px;
	.title{
		text-align: center;
		margin: auto;
		padding-top: 55px;
		.first-heading{
			padding-bottom: 10px;
			h5{
				margin: 0;
				font-size: 17px;
				color: $primary;
			}
		}
		.second-heading{
			h2{
				margin:0;
				font-weight: 800;
				width: 452px;
				line-height: 50px;
			}
		}
	}
	.main-box{
		padding-top: 65px;
		padding-bottom: 65px;
		.image{
			img{
				object-fit: cover;
				width: 100%;
				height: 300px;
			}
			.bottom-content{
				display:flex;
				justify-content: space-between;
				position: relative;
				padding-top: 10px;
				.content{
					h4{
						font-weight: 800;
						margin: 0;
					}
					p{
						margin: 0;
						font-weight: 700;
						font-size: 15px;
						color:$secondary;
					}
				}
				.icon{
					margin: 39px 0px;
					background-color: #efedf4;
					padding: 10px 15px;
					position: absolute;
					right: 0;
					i{
						padding: 5px 5px;
						font-size: 11px;
					}
					&:hover{
						background-color: #5f2dee;
						i{
							color:$white;
						}
					}
				}
			}
			hr{
				margin-top: 20px;
				color:#e3e1ee;
			}
		}
	}
	.swiper-pagination{
		span{
			border-radius: 0;
			width: 17px;
			height: 4px;
			background-color:$primary;
			
		}
	}
}

