// Body
$body-bg   : #ffffff;
$body-color: #555;

// Typography
$barlow:'Barlow', sans-serif;
$font-family-base : 'Roboto', sans-serif;;
$font-family-title : 'jost', sans-serif;
$headings-font-weight   : 800;

*{
	box-sizing:border-box;
	
}
body{
	margin:0;
}

ul{
	li{
		list-style: none;
	}
	a{
		text-decoration:none;
	}
}
body{
	font-family: 'Catamaran', sans-serif;
	
	a{
		text-decoration:none;
	}
	
}
//font-size
	h1{ 
		font-size: 79px;
		margin:0;
	}
	h2{
		font-size: 39px;
	}
	h3{
		font-size: 30px;
	}
	h4{
		font-size: 24px;
	}
	h5{
		font-size: 20px;
	}
	h6{
		font-size: 16px;
			
	}


//container
.container{
	max-width: 1100px;
    margin-left: auto;
    margin-right: auto;
    padding-right: 40px;
    padding-left: 40px;
}
//row scss
.row {
		display: flex;
		flex-wrap: wrap;
		margin-left: -15px;
		margin-right: -15px;
	}
//col scss
.col-6{
		width:50%;
		padding-left: 10px;
		padding-right: 10px;
		margin:0px;
	}
	
.col-2 {
	width: 16.66%;
	padding-right: 10px;
	padding-left: 10px;
}
.col-3 {
	width: 25%;
	padding-left: 10px;
	padding-right: 10px;
}
.col-4 {
	width:33.33%;
	padding-left: 10px;
	padding-right: 10px;
}
.col-8{
	width:66.66%;
	padding-left: 10px;
	padding-right: 10px;
}
.col-5 {
	width: 41.66%;
	padding-left: 10px;
	padding-right: 10px;
}